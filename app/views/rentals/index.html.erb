<p id="notice"><%= notice %></p>

<h1>Alquiler</h1>

<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>Clientes</th>
      <th>Edificio</th>
      <th>Cuartos</th>
      <th>ACTIVO </th>
      <th>Tiempo de Renta</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rentals.each do |rental| %>
      <tr>
        <td><%= rental.client %></td>
        <td><%= rental.type_rental %></td>
        <td><%= rental.room %></td>
        <td><%= rental.type_state %></td>
        <td><%= rental.room_state %></td>
        <td><%= link_to 'Show', rental %></td>
        <td><%= link_to 'Edit', edit_rental_path(rental) %></td>
        <td><%= link_to 'Destroy', rental, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

